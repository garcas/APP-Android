            android:textSize="20dp"
            android:background="@drawable/botongeneral"
            android:layout_below="@+id/buttonResultados"
            android:layout_alignStart="@+id/buttonResultados"
            android:layout_alignEnd="@+id/buttonResultados" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_Resultados"
            android:id="@+id/buttonResultados"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/botongeneral"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/buttonIniciarJuego"
            android:layout_alignStart="@+id/buttonIniciarJuego"
            android:layout_alignEnd="@+id/buttonIniciarJuego" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_IniciarJuego"
            android:id="@+id/buttonIniciarJuego"
            android:textColor="#FFFFFF"
            android:textSize="23sp"

            android:textStyle="bold"
            android:background="@drawable/botoniniciarjuego"
            android:layout_below="@+id/scrollView"
